extends ../layouts/admin.pug

block content
  div(class="container py-4")
    div(class="row")
      div(class="col")
        div(class="card border-0 shadow")
          div(class="card-header border-0 bg-white")
            h5(class="card-title mb-0") List of Candidates
            p(class="card-text text-muted") Total 3 candidates
            button(class="btn btn-primary btn-block", type="buttom") Add new candidate
          div(class="card-body p-0")
            div(class="table-responsive")
              table(class="table table-hover table-borderless")
                thead
                  tr(class="border-bottom")
                    th(scope="col") #
                    th(scope="col") President
                    th(scope="col") Vice president
                    th(class="text-right", scope="col") Actions
                tbody
                  each val in [1, 2, 3, 4, 5]
                    tr(class="border-bottom")
                      th(class="align-middle", scope="row") #{val}
                      td(class="align-middle") Mahada Putra
                      td(class="align-middle") Adelia Pratiwi
                      td(class="text-right")
                        a(class="btn btn-secondary btn-sm mx-1", href="/admin/candidates") Detail
                        a(class="btn btn-danger btn-sm mx-1", href="/admin/candidates") Hapus

