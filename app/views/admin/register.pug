extends ../layouts/auth.pug

block content
  div(class="container py-4")
    div(class="row justify-content-center")
      div(class="col-12 col-sm-8 col-md-6 col-lg-4")
        if message.length > 0
          div(class="alert alert-danger") #{message}
        div(class="card border-0 shadow")
          div(class="card-header border-0 bg-white")
            h5(class="card-title mb-0") Register Admin
          div(class="card-body")
            form(action="/admin/auth/register", method="POST")
              div(class="form-group")
                label(for="username") Username
                input(
                  autofocus
                  id="username"
                  name="username"
                  type="text"
                  class="form-control"
                )
              div(class="form-group")
                label(for="password") Password
                input(
                  id="password"
                  name="password"
                  type="password"
                  class="form-control"
                )
              div(class="form-group mb-0")
                button(class="btn btn-primary mr-2", type="submit") Register
                a(class="btn btn-default", href="/admin/auth/login") Login instead
